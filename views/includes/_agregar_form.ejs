<form action="/zoo/agregar" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
    <label for="nombre" class="label">Nombre del animal</label>
    <input
      class="input is-info"
      type="text"
      placeholder="TIGRE"
      id="nombre"
      name="nombre"
      required
    />
    <br><br>
    <div class="file">
      <label for="imagen" class="file-label">
        <input type="file" class="file-input" id="imagen" name="imagen">
        <span class="file-cta">
          <span class="file-label"> Escoge una imagen… </span>
        </span>
      </label>
    </div>
    <br><br>
    <input class="button is-info" type="submit" value="Añadir Animal">
  </form>